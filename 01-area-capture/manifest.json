{
    "manifest_version": 3,
    "name": "Screen-Capture-Example",
    "version": "1.0.0",
    "description": "Screen Capture Example",
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Screen Capture Example",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}